<!DOCTYPE html>
<html lang="en">
    <%- include('header.ejs') %>
    <body>
        <%- include('nav.ejs') %>
        <main class="main">
            <section class="s-listings">
                <div class="c-listings">
                    <% for (let listing of listings) { %>
                    <a href="/listings/<%= listing.id %>" target="_blank">
                        <article class="listing">
                            <img
                                class="listing__img"
                                src="<%= listing.image %>"
                                alt=""
                            />
                            <h2 class="listing__title">
                                <%= listing.title.slice(0, 30) %> <%=
                                listing.title[31] ? '...' : '' %>
                            </h2>
                            <p class="listing__address">
                                <%= listing.address %>
                            </p>
                            <p class="listing__host">
                                Hosted by <%= listing.host %>
                            </p>
                            <p class="listing__description">
                                <%= listing.description.slice(0, 150) %>...
                            </p>
                            <p class="c-listing__price">
                                <span class="listing__price">
                                    <%= formatCurrency.format(listing.price)%>
                                </span>

                                night
                            </p>
                        </article>
                    </a>
                    <% } %>
                </div>
            </section>
        </main>
        <%- include('footer.ejs') %>
    </body>
</html>
