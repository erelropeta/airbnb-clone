<!DOCTYPE html>
<html lang="en">
    <%- include('header.ejs') %>
    <body>
        <%- include('nav.ejs') %>
        <main class="main">
            <section class="s-sign-up">
                <div class="c-sign-up">
                    <h1 class="s-sign-up__title">Welcome to Airbnb</h1>
                    <% if (locals.errorMessage) { %>
                    <p class="error-message"><%= errorMessage %></p>
                    <% } %>
                    <form class="sign-up-form" action="/sign-up" method="POST">
                        <div class="sign-up-form__group">
                            <div
                                class="c-sign-up-form__input c-sign-up-form__input--username"
                            >
                                <input
                                    type="text"
                                    class="sign-up-form__input sign-up-form__input--username"
                                    name="username"
                                    id="username"
                                    placeholder=" "
                                />
                                <label
                                    class="sign-up-form__label"
                                    for="username"
                                >
                                    Username
                                </label>
                            </div>
                            <div class="c-sign-up-form__input">
                                <input
                                    type="password"
                                    class="sign-up-form__input"
                                    name="password"
                                    id="password"
                                    placeholder=" "
                                />
                                <label
                                    class="sign-up-form__label"
                                    for="password"
                                >
                                    Password
                                </label>
                            </div>
                        </div>
                        <button class="sign-up-form__submit-btn" type="submit">
                            Sign up
                        </button>
                    </form>

                    <p class="s-sign-up__footer">
                        Already have an account?
                        <a class="s-sign-up__footer-link" href="/log-in"
                            >Log in</a
                        >
                    </p>
                </div>
            </section>
        </main>
        <%- include('footer.ejs') %>
    </body>
</html>
